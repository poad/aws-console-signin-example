{
  "name": "@aws-example/cognito-admin-infra",
  "private": true,
  "version": "0.0.1",
  "bin": "bin/infra.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "style:fix": "prettier --write bin lib",
    "style:check": "prettier --check bin lib",
    "eslint:fix": "eslint './{bin,lib}/**/*.{ts,tsx}' --fix",
    "eslint:check": "eslint './{bin,lib}/**/*.{ts,tsx}'",
    "lint": "pnpm run --parallel /^.*:check/",
    "lint-fix": "pnpm run /^.*:fix/"
  },
  "devDependencies": {
    "@middy/core": "^6.0.0",
    "@types/aws-lambda": "^8.10.147",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.12.0",
    "aws-cdk": "^2.177.0",
    "esbuild": "^0.24.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@aws-console-signin-example/common-cognito-singin": "link:common/cognito-singin",
    "@aws-lambda-powertools/logger": "^2.13.1",
    "@aws-sdk/client-cognito-identity": "^3.734.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.734.0",
    "@aws-sdk/client-sts": "^3.734.0",
    "aws-cdk-lib": "^2.177.0",
    "aws-lambda": "^1.0.7",
    "constructs": "^10.4.2",
    "log4js": "^6.9.1",
    "source-map-support": "^0.5.21"
  },
  "jest": {
    "roots": [
      "<rootDir>/test"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
