{
  "compilerOptions": {
    "target": "ES2022",
    "module": "es2022",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "rootDirs": [
      "bin",
      "lib",
      "lambda"
    ],
    "paths": {
      "@aws-console-signin-example/cognito-singin": [
        "../common/cognito-singin/src"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}
